chown fidsisux:fidsisux /home/fidsisux/.ssh

cd /home/fidsisux/.ssh



echo "ssh-rsa " >/home/fidsisux/.ssh/authorized_keys


chown fidsisux:fidsisux authorized_keys

chmod 600 authorized_keys

